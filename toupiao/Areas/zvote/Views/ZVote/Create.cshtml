@model toupiao.Areas.zvote.Models.ZVote

@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="row">
    <div class="offset-md-3 col-md-6 text-center">

        <h1>新的投票</h1>
        <h4>在这里产生。</h4>

        <form asp-action="Create" id="zvote_create_form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description"
                          class="form-control"
                          rows="5"></textarea>

                <span asp-validation-for="Description"
                      class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DOStart" class="control-label"></label>
                <span class="text-info">(默认为立即发布)</span>
                <input asp-for="DOStart" hidden />
                <div class="row">
                    <div class="col col-6 ">
                        <input type="date" class="form-control d-o-start-date" />
                    </div>
                    <div class="col col-6 ">
                        <input type="time" class="form-control d-o-start-time" />
                    </div>
                </div>
                <span asp-validation-for="DOStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DOEnd" class="control-label"></label>
                <input asp-for="DOEnd" hidden/>
                <div class="row">
                    <div class="col col-6 ">
                        <input type="date" class="form-control d-o-end-date"/>
                    </div>
                    <div class="col col-6 ">
                        <input type="time" class="form-control d-o-end-time" />
                    </div>
                </div>
                <span asp-validation-for="DOEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemType" class="control-label"></label>
                <select asp-for="ItemType" asp-items="Model.ItemTypes"
                        class="form-control"></select>
                <span asp-validation-for="ItemType" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsSaveOnly" />
                    @Html.DisplayNameFor(model => model.IsSaveOnly)
                </label>
            </div>

            <div class="form-group">

                <a asp-action="Index" class="btn btn-info">&laquo; 返回</a>
                <input type="submit" class="zl-form-input" hidden/>
                <a class="btn btn-primary zlsubmit">添加投票项&raquo;</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
{

    <partial name="_ValidationScriptsPartial" />

    <script>
        var is_form_valid = true;

        $(document).on('change', '.d-o-start-date,.d-o-start-time',
            (event) => {

                $('#DOStart').val(
                    $('.d-o-start-date').val() + "T" +
                    ($('.d-o-start-time').val()||'00:00')
                );
            });

        $(document).on('change', '.d-o-end-date,.d-o-end-time',
            (event) => {

                var end_datetime = $('.d-o-end-date').val() + "T"
                    + $('.d-o-end-time').val();

                console.log(end_datetime);

                // 结束时间要大于开始时间
                is_form_valid = ((
                    new Date($('#DOStart').val()) < new Date(end_datetime)) &&
                    // 结束时间要大于现在
                    (new Date() < new Date(end_datetime)));

                console.log(is_form_valid);

                if (!is_form_valid) {
                    zlalert('没开始就结束的投票是没有的! 要有信心! 加油!');
                } else {
                    $('#DOEnd').val(end_datetime);
                }
        });

        $(document).on('click', '.zlsubmit', (event) => {
            // 防止默认事件(提交)被触发
            event.preventDefault();

            if (is_form_valid) {
                $('.zl-form-input').click();
            }
            else {
                zlalert('填写有误, 好好检查下吧!');
            }
        });
    </script>
}
